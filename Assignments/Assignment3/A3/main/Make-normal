CFLAGS=-Wall

galsim-normal: galsim-normal.o galsim-normal.c point.o 
	gcc -o galsim-normal galsim-normal.o point.o -lm 

galsim-normal.o: galsim-normal.c point.h point.c
	gcc $(CFLAGS) -c galsim-normal.c

point.o: point.c point.h
	gcc -c point.c

compare: galsim-normal ellipse_N_00010_after200steps.gal
	./../compare_gal_files/compare 10 ellipse_N_00010_after200steps.gal ../ref_output_data/ellipse_N_00010_after200steps.gal

test: test.o test.c point.o
	gcc -o test test.o point.o

test.o: test.c point.h point.c
	gcc $(CFLAGS) -c test.c

clean:
	rm -f ./galsim-normal ./galsim ./test ./a.out *.gal *.o
	

